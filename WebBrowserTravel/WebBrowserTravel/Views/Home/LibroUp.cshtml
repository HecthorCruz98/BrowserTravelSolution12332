@model Libro
@{
    ViewData["Title"] = " Actualizar Libro";
}
<div class="card">
    <div class="card-header">
        @ViewBag.Accion
    </div>
    <div class="card-body">

        <form asp-action="UpLibro" asp-controller="Home" method="post">
            
                <div class="mb-2">
                    <label class="form-label">Id</label>
                    <input type="text" class="form-control form-control-sm" asp-for="Id" readonly="readonly" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Editorial</label>
                    @Html.DropDownList("editorialId", ViewBag.ListaEditorial as SelectList,"--Seleccionar Editorial--",new{@class ="form-control"})
                </div>
                <div class="mb-2">
                    <label class="form-label">Titulo</label>
                    <input type="text" class="form-control form-control-sm" asp-for="titulo" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Sipnosis</label>
                    <input type="text" class="form-control form-control-sm" asp-for="sinopsis" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Paginas</label>
                    <input type="text" class="form-control form-control-sm" asp-for="nPaginas" />
                </div>
                <button type="submit" class="btn btn-success btn-sm">Guardar</button>
                <a asp-action="LibroList" asp-controller="Home" class="btn btn-warning btn-sm">Volver</a>
            
        </form>

    </div>

</div>