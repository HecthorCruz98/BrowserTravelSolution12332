@model List<Autor>
@{
    ViewData["Title"] = "Autor";
}
<div class="card">
    <div class="card-header">
        Lista de Autores
    </div>
    <div class="card-body">

        <a asp-action="AutorAdd" asp-controller="Home" class="btn btn-success btn-sm">Nuevo Autor</a>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Apellido</td>
                        <td>
                            <a asp-action="AutorUp" asp-controller="Home" class="btn btn-primary btn-sm" asp-route-Id="@item.Id">Editar</a>
                        </td>
                        <td>
                        </td>
                    </tr>
                }
                <a asp-action="AutorList" asp-controller="Home" class="btn btn-warning btn-sm">Refrescar</a>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a asp-action="EditorialList" asp-controller="Home" class="btn btn-warning btn-sm">Editoriales</a>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a asp-action="LibroList" asp-controller="Home" class="btn btn-warning btn-sm">Libros</a>


            </tbody>
        </table>
    </div>

</div>